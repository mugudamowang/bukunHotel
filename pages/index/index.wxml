<!--index.wxml-->

<!-- topNavBar这里是顶部菜单 -->
<view class="topNavBar neonBox">
	<view class="swiper-tab-list {{star==0 ? 'neonOn' : ''}}" data-star="0">☾</view>
	<view class="swiper-tab-list {{star==1 ? 'neonOn' : ''}}" data-star="1">☆</view>
</view>


<!-- 这里是createPost按钮 -->
<view hidden="{{!star}}">
	<text bindtap="createPost" class="iconfont icon_add {{tapAdd==true ? 'iconfontAnimation' : ''}}  createPost neonBox"></text>
	<sendMessages wx:if="{{tapAdd}}" class="popIn"></sendMessages>
</view>


<view class="main">
	<!-- dailyCard -->
	<swiper class="swiper-section" interval="{{interval}}" duration="{{duration}}" bindchange="switchNav">
		<swiper-item class="dailyCard-section">
			<scroll-view class="flow" scroll-y="true" bindscrolltoupper="topLoad">
				<!-- 头部 -->
				<view class="top" wx:if="{{isShowArticle}}">
					<view class="night">
						<text class="hello">晚上好</text>
						<text class="moon"></text>
					</view>
					<view class="word">一定一定一定一定要好好睡觉早睡早起啊啊啊啊啊aaaaaaa啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊你好啊啊啊啊啊啊啊啊啊啊啊啊啊啊</view>
				</view>
				<!-- 中部 -->
				<view class="centerlist">
					<view class="wrap" wx:for="{{playlist}}" wx:key="_id" wx:for-item="item" bindtap='change' data-index="{{index}}">
						<image class="img_bg" mode="center" src="{{item.pic_url}}"></image>
						<view class="title">{{item.name}}</view>
					</view>

				</view>
				<!-- 尾部版权信息 -->
				<view class="copyright" wx:if="{{isShowArticle}}">@不困旅馆</view>
			</scroll-view>
			<!-- 固定的播放信息 -->
			<view class="fix" wx:if="{{isShowArticle}}">
				<view class="play">
					<view class="musicpicture">
						<image class="musicbg {{is_play==true?'musicbgOn':' '}}" mode="center" src='{{play.coverImgUrl}}'></image>
						<image wx:if="{{is_play==true}}" class="on" src="https://i.loli.net/2020/04/23/nNkJtQMpGl19yVd.png" mode="widthFix" bindtap = "pause"></image>
						<image wx:if="{{is_play==false}}"  class="stop" src=" https://i.loli.net/2020/04/23/sk4m6UyRJTrfGVd.png" mode="widthFix" bindtap = "play2"></image>
					</view>
					<view class="musicinfo">
						<text class="musicname">{{play.title}}</text>
						
						<text class="musictime" >
						{{play.currentTime}}</text>
					</view>
				</view>
				<view class="handle">
					
					<picker class="clock" mode="time" value="{{time}}" start="00:00" end="24:00" bindchange="bindTimeChange">
					<view class="clock2">0</view>
  </picker>
					<button class="share" open-type="share"></button>
				</view>
			</view>
			<!-- 蒙版星星 -->
			<view class="star" wx:if="{{isShowArticle}}"></view>
		</swiper-item>



		<!-- userPost -->


		<swiper-item>
			<scroll-view class="userPost" scroll-y="true" upper-threshold="50" lower-threshold="100" bindscrolltolower="scrolltolower">

				<view class="postNav hotPost">
					<text>但行好事,不问前程</text>
				</view>

				<view wx:for="{{datalist}}">

					<view class="postNav">
						<view class="postUser">
							<view class="circle"></view> <!-- 圆形icon -->
							{{item.id}} <!-- 作者id -->
						</view>
						{{item.post}} <!-- 作者标题 -->
						<navigator hover-class="none" url="../postDetail/postDetail">
							<media class="mediaCom"></media>
						</navigator>
					</view>

				</view>

			</scroll-view>
		</swiper-item>

	</swiper>
</view>