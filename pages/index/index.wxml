<!--index.wxml-->

<!-- topNavBar这里是顶部菜单 -->
<view class="topNavBar neonBox">
	<view class="swiper-tab-list {{star==0 ? 'neonOn' : ''}}" data-star="0">☾</view>
	<view class="swiper-tab-list {{star==1 ? 'neonOn' : ''}}" data-star="1">☆</view>
</view>


<!-- 这里是createPost按钮 -->
<view hidden="{{!star}}">
	<text bindtap="createPost" class="iconfont icon_add {{tapAdd==true ? 'iconfontAnimation' : ''}}  createPost neonBox"></text>
	<sendMessages comType="post" wx:if="{{tapAdd}}" class="popIn"></sendMessages>
</view>


<view class="main">
	<!-- dailyCard -->
	<swiper class="swiper-section" interval="{{interval}}" duration="{{duration}}" bindchange="switchNav">
		<swiper-item class="dailyCard-section">
			<scroll-view class="flow" scroll-y="true">
				<!-- 头部 -->
				<view class="top" wx:if="{{isShowArticle}}">
					<view class="night">
						<text class="hello">晚上好</text>
						<text class="moon"></text>
					</view>
					<view class="word">一定一定一定一定要好好睡觉早睡早起啊啊啊啊啊aaaaaaa啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊你好啊啊啊啊啊啊啊啊啊啊啊啊啊啊</view>
				</view>
				<!-- 中部 -->
				<view class="centerlist">
					<view class="wrap" wx:for="{{playlist}}" wx:for-index="index" wx:for-item="item">
						<image class="img_bg" mode="center" src="{{item.pic_url}}"></image>
						<view class="title">{{item.name}}</view>
					</view>

				</view>
				<!-- 尾部版权信息 -->
				<view class="copyright" wx:if="{{isShowArticle}}">@不困旅馆</view>
			</scroll-view>
			<!-- 固定的播放信息 -->
			<view class="fix" wx:if="{{isShowArticle}}">
				<view class="play">
					<view class="musicpicture">
						<image class="musicbg" mode="center" src="https://i.loli.net/2020/04/22/D6EOYiMC58fI7za.jpg"></image>
						<image class="on" src="https://i.loli.net/2020/04/23/nNkJtQMpGl19yVd.png" mode="widthFix"></image>
					</view>
					<view class="musicinfo">
						<text class="musicname">轻风细雨</text>
						<text class="musictime">10:00</text>
					</view>
				</view>
				<view class="handle">
					<text class="clock"></text>
					<text class="share"></text>
				</view>
			</view>
			<!-- 蒙版星星 -->
			<view class="star" wx:if="{{isShowArticle}}"></view>
		</swiper-item>



		<!-- userPost -->


		<swiper-item>
			<scroll-view class="userPost" scroll-y="true" ower-threshold="10" bindscrolltolower="scrolltolower">
				<navigator hover-class="none" url="../my/my">
					<view class="postTopic">
						<view class="fixed">
							<image class="avatar" src="{{userinfo.avatarUrl}}"></image>
							<view style="font-size: 15rpx;color:grey; margin: 10rpx;">我的</view>
						</view>
						<view class="post">但行好事,不问前程</view>
					</view>
				</navigator>

				<view wx:for="{{postlist}}">
					<view class="postNav">
						<view class="postUser">
							<view class="circle"></view> <!-- 圆形icon -->
							{{item.nickname}} <!-- 作者id -->
							<view style="font-size: 15rpx;color:grey;margin: 10rpx">{{item.date}}</view>
						</view>
						<view class="post">{{item.post}}</view> <!-- 作者标题 -->
						<media postid="{{item._id}}" commentNum="{{item.commentNum}}" like="{{item.like}}" likeNum="{{item.likeNum}}" class="mediaCom"></media>
					</view>
				</view>
				<view style="top:0rpx;text-align: center" hidden="{{!loadAll}}">🛵。。。<text style="font-size: 15rpx;color:grey; margin: 10rpx;">loading</text></view>
				<view style="padding: 50rpx;text-align: center" hidden="{{!loadAll}}">🚗。。。<text style="font-size: 15rpx;color:grey; margin: 10rpx;">no more</text></view>
			</scroll-view>
		</swiper-item>

	</swiper>
</view>