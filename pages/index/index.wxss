/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.flow {
  height: 1200rpx;
}
.top {
  margin: 20rpx 50rpx;
  height: 320rpx;
}
.top .night {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.top .night .hello {
  color: white;
  font-size: 50rpx;
}
.top .night .moon {
  width: 110rpx;
  height: 100%;
  opacity: 0.8;
  background: no-repeat url("https://i.loli.net/2020/04/23/l7kt9JXcDF8bzVC.png");
  background-size: auto 100%;
  transform-origin: center 50%;
  animation: swing 4s linear 0s infinite alternate ;
}
.top .word {
  color: gray;
  font-size: 30rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;
}
.centerlist {
  display: flex;
  flex-wrap: wrap;
  overflow-y: scroll;
  justify-content: space-around;
  position: relative;
}
.centerlist .wrap {
  position: relative;
  margin-bottom: 70rpx;
}
.centerlist .wrap .img_bg {
  width: 300rpx;
  height: 300rpx;
  border-radius: 15rpx;
  
}
.centerlist .wrap .title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 50%;
  text-align: center;
  color: white;
  font-size: 30rpx;
  font-weight: 100;
}
.detail:nth-child(1) .mask {
  background-image: url("https://i.loli.net/2020/04/22/UyOxGElWIzQ43R9.jpg");
}
.detail:nth-child(2) .mask {
  background-image: url("https://i.loli.net/2020/04/22/ouqdKrLvQUcfOZh.jpg");
}
.detail:nth-child(3) .mask {
  background-image: url(" https://i.loli.net/2020/04/22/hFxPTm83lLiG1ZW.jpg");
}
.detail:nth-child(4) .mask {
  background-image: url("https://i.loli.net/2020/04/22/Q26NEpxfSImq3uz.png");
}
.detail:nth-child(5) .mask {
  background-image: url("https://i.loli.net/2020/04/22/lgV2ZfORcHBsyXJ.jpg");
}
.detail:nth-child(6) .mask {
  background-image: url("https://i.loli.net/2020/04/22/D6EOYiMC58fI7za.jpg");
}
.copyright {
  width: 100%;
  margin-top: 100rpx;
  height: 300rpx;
  text-align: center;
  color: white;
  font-size: 30rpx;
}
.fix {
  position: fixed;
  bottom: 50rpx;
  left: 0;
  width: 100%;
  height: 150rpx;
  background-color: #1d1d2b;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;

}
.fix .play {
  position: absolute;
  top: 25rpx;
  left: 10rpx;
  width: 250rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.fix .play .musicpicture {
  position: relative;
}
.fix .play .musicpicture .musicbg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 1px white solid;
  box-sizing: border-box;
  filter: blur(0.5px);
  
}
.fix .play .musicpicture .musicbgOn{
  animation: rotate 10s linear 0s infinite normal ;
}
.fix .play .musicpicture .on {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
}
.fix .play .musicpicture .stop {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
}
.fix .play .musicinfo {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.fix .play .musicinfo .musicname {
  color: white;
  font-size: 30rpx;
}
.fix .play .musicinfo .musictime {
  color: gray;
  font-size: 25rpx;
}
.fix .handle {
  position: absolute;
  top: 50rpx;
  right: 0;
  width: 200rpx;
  height: 100rpx;
  
}
.fix .handle .clock {
  position: relative;
  width: 100rpx;
  height: 70%;
  display: inline-block;
  background: no-repeat url(" https://i.loli.net/2020/04/23/v7KcBqux2pITASm.png");
  background-size: auto 100%;
 
  
}
.fix .handle .clock .clock2{
  position: absolute;
  opacity: 0;
  top: 0;
  left: 0; 
  width: 100%;
  height: 100%;
  
  
}

.fix .handle .share {
 
  width: 100rpx;
  height: 60%;
  display: inline-block;

  background: no-repeat url("https://i.loli.net/2020/04/23/hpIKrSRHeAJBOaY.png");
  background-size: auto 100%;
}
.star {
  position: absolute;
  left: 0;
  top: 0;
  z-index: -2;
  width: 100%;
  height: 100%;
  background: url("https://i.loli.net/2020/04/23/39gGjtE8LMBXNDV.jpg")no-repeat 0 0;
  background-size: cover;
  animation: shine 2s linear 0s infinite alternate ;
}
@keyframes swing {
  from {
    transform: rotateZ(0deg);
  }
  to {
    transform: rotateZ(8deg);
  }
}
@keyframes shine {
  from {
    opacity: 1 ;
  }
  to {
    opacity: 0.3;
  }
}
@keyframes rotate {
  from {
    transform: rotateZ(0deg);
  }
  to {
    transform: rotateZ(360deg);
  }
}
