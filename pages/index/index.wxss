/* 顶部菜单切换 */
view{
  padding: 0;
  margin: 0;
}

.postNav {
  border-top: 15rpx rgba(18, 30, 40, 0.426) solid;
  border-bottom: 15rpx rgba(18, 30, 40, 0.426) solid;
  background-color: rgb(21, 38, 51);
  margin: 45rpx 0rpx 45rpx 0rpx;
  box-shadow: 0 0 0 15rpx rgba(25, 42, 53, 0.282);
  display: flex;
  flex-direction: row;
  justify-content: center;  
  align-items: center;
  height: 200rpx;
  position: relative;
  /* border: solid 1px red; */
}
.circle{
  background-color:  #090F14;
  margin-right: 15rpx;
  border: 5rpx solid rgba(51, 53, 61, 0.186);
  box-shadow: 0 0 0 18rpx rgba(25, 42, 53, 0.282);
  border-radius: 50%;
  height: 40rpx;
  width: 40rpx;
}
.postUser{
  font-size: 34rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 10rpx;
  left: 30rpx;
}

.hotPost{
  border: 10rpx rgba(83, 85, 85, 0.426) solid;
  border-radius: 10rpx;
  background-color: white;
  margin-left: 10rpx;
  margin-right: 10rpx;
  color: black;
}

.topNavBar {
  position: relative;
  z-index: 2;
  background-color: rgba(9, 15, 20, 0.803);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.topNavBar :nth-child(1),
.topNavBar :nth-child(2) {
  padding: 0 30rpx;
  color: red;
}

.swiper-section {
  color: aliceblue;
  background-color: #090F14;
  position: absolute;
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

