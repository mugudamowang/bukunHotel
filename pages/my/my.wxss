page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
.myWrap{

}
/* 头部 */
.myWrap .top{
width: 100%;
height: 500rpx;
position: relative;

}
.myWrap .top .bg{
width: 100%;
height: 100%;
}
.myWrap .top .main{
position: absolute;
width: 85%;
height: 50%;
left: 50%;
  transform: translateX(-50%);
  top: 30%;
  display: flex;
  justify-content: space-around;

  color: white;
  font-size: 30rpx;
  font-weight: 100;
}
.myWrap .top .main .info{
display: flex;
width: 20%;
height: 80%;
flex-direction: column;
justify-content: space-between;
}
.myWrap .top .main .info .infopic{
width: 100%;
height: 125rpx;
border-radius: 50%;

}
.myWrap .top .main .info .infoname{
  text-align: center;
  width:100% ;
  height: 25%;

}
.myWrap .top .main .hello{
  display: flex;
  padding-left: 30rpx;
  box-sizing: border-box;
background-color:rgba(255, 255, 255, 0.6);
width: 180rpx;
height: 180rpx;
flex-wrap: wrap;
  font-size: 60rpx;
  justify-content: center;
  align-items: center;
  letter-spacing:5rpx;
  
 
}
/* 中部 */
.myWrap .center{
 
background-color:#1e485e;
padding-top: 70rpx;
color: white;
border-top: solid 8rpx #465760;
text-align: center;
}
.myWrap .center .introduce{
 
  font-size: 40rpx;
  margin-left: 20rpx;

}

/* 你的css代码 */
.userPost {
  height: 100%;
  display: flex;

}
.postNav {
  border-top: 15rpx rgba(18, 30, 40, 0.426) solid;
  border-bottom: 15rpx rgba(18, 30, 40, 0.426) solid;
  background-color: rgb(21, 38, 51);
  /* 扩大了文章之间的距离 */
  /* margin: 45rpx 0rpx 45rpx 0rpx; */
  margin: 80rpx 0rpx 80rpx 0rpx;
  box-shadow: 0 0 0 15rpx rgba(25, 42, 53, 0.282);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  position: relative;

 


}


.postNav .mediaCom{
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 10rpx;
  right: 30rpx;
}

.postNav .circle {
  background-color: #090F14;
  margin-right: 15rpx;
  border: 5rpx solid rgba(51, 53, 61, 0.186);
  box-shadow: 0 0 0 18rpx rgba(25, 42, 53, 0.282);
  border-radius: 50%;
  height: 40rpx;
  width: 40rpx;
}

.postUser {
  font-size: 34rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 10rpx;
  left: 30rpx;
}
.hotPost {
  border: 10rpx rgba(83, 85, 85, 0.426) solid;
  border-radius: 10rpx;
  background-color: white;
  margin-left: 10rpx;
  margin-right: 10rpx;
  color: black;
}


/* 弹出管理三点*/
.more{
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  width: 50rpx;
  height: 40rpx;
  background: no-repeat url("https://i.loli.net/2020/05/30/b7QoAvz2metL6FH.png");
  background-size: auto 100%;


}

/* 返回顶部 */
.up{
  position: fixed;
  bottom: 70rpx;
  right: 5rpx;
  width: 50rpx;
  height: 50rpx;
  background: no-repeat url("https://i.loli.net/2020/05/30/4mHIxAXyzd5gDRK.png");
  background-size: auto 100%;
}
/* 弹出管理模态框 */
.modal{
  position:fixed;
   top:0; 
   right:0;
    bottom:0; 
    left:0; 
    z-index:1000;}
    .modal-cancel{
      position:absolute;
       z-index:2000; 
       top:0; 
       right:0; 
       bottom: 0; 
       left:0;
        background:rgba(0,0,0,0.3);}
.bottom-dialog-body{
  width:100%;
   position:absolute; 
   z-index:3000; 
   bottom:0; 
   left:0;
   /* background-color: #dfdede; */
   }
/*动画前初始位置*/
.bottom-positon{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
text-align: center;
}


